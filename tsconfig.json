{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",
    "lib": ["es6"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* Modules */
    "module": "commonjs",
    "rootDir": "src",
    "baseUrl": ".",
    "resolveJsonModule": true,
    /* JavaScript Support */
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,

    "paths": {
      "@/*": ["src/*"],
      "@/core/*": ["src/core/*"],
      "@/modules/*": ["src/core/modules/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"]
}
